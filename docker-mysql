version: '3.1'

services:
    db:
        image: mysql
        restart: always
        environment:
          MYSQL_DATABASE: mokocharlie
          MYSQL_ROOT_USER: root
          MYSQL_ROOT_PASSWORD: root
        ports:
              - 3306:3306
        volumes:
            - ./src/main/resources/data:/docker-entrypoint-initdb.d
    adminer:
        image: adminer
        restart: always
        ports:
          - 8888:8888
